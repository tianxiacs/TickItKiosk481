<Window x:Class="TickItKiosk481.CreditDebitPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickItKiosk481"
        mc:Ignorable="d"
        Title="Show_Selection" WindowStartupLocation="Manual" Left="0" Top="0" SizeToContent="WidthAndHeight">
    <Grid HorizontalAlignment="Center" Height="560" VerticalAlignment="Top" Width="800" Background="PaleGoldenrod">
        <TextBlock HorizontalAlignment="Left" Margin="419,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="111" Width="371" FontSize="25" Foreground="#FF663232"><Run Text="&lt;-"/><Run Text="Use the "/><Run Language="en-ca" Text="debit machine to insert, tap, or swipe the card"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="104,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="631" FontSize="30"><Run Text="Please "/><Run Text="use the debit machin"/><Run Language="en-ca" Text="e for card payment"/><Run Text=" "/></TextBlock>
        <Button Content="Select another payment method" HorizontalAlignment="Left" Height="35" Margin="10,49,0,0" VerticalAlignment="Top" Width="232" Click="BackToPayment" Background="Black" Foreground="#FFE4E46D" FontFamily="Sitka Heading" FontSize="15"/>
        <Image HorizontalAlignment="Left" Height="300" Margin="171,158,0,0" VerticalAlignment="Top" Width="219" Source="images/debit.jpg"/>
        <Button Content="Language" HorizontalAlignment="Left" Margin="15,498,0,21" Width="85" FontSize="14" Click="GetLanguage" Background="Black" Foreground="#FFE4E46D" FontFamily="Sitka Heading"/>
        <Button Content="Help" HorizontalAlignment="Left" Margin="113,498,0,0" VerticalAlignment="Top" Height="41" Width="78" FontSize="14" Click="GetHelp" Background="Black" Foreground="#FFE4E46D" FontFamily="Sitka Heading"/>
        <Button Content="Successfully Pay" HorizontalAlignment="Left" Height="47" Margin="482,322,0,0" VerticalAlignment="Top" Width="159" FontSize="20" Click="GoToEndWindow" Background="Black" Foreground="#FFE4E46D" FontFamily="Sitka Heading"/>
        <TextBox HorizontalAlignment="Left" Margin="603,44,0,0" Text="Time left for seat reservation:" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="55" FontSize="14" Background="{x:Null}"/>
        <Label x:Name="TimerLabel" Content="Label" HorizontalAlignment="Left" Margin="620,67,0,0" VerticalAlignment="Top" Width="158" FontSize="14"/>
        <Image HorizontalAlignment="Left" Height="50" Margin="327,11,0,0" VerticalAlignment="Top" Width="132" Source="/images/logoLetter.png"/>
        <Separator HorizontalAlignment="Left" Height="13" Margin="29,29,0,0" VerticalAlignment="Top" Width="289"/>
        <Separator HorizontalAlignment="Left" Height="13" Margin="467,29,0,0" VerticalAlignment="Top" Width="302"/>

    </Grid>
</Window>
