<Page x:Class="TickItKiosk481.TimeoutScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TickItKiosk481"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimeoutScreen">

    <Grid Background="White">
        <TextBox HorizontalAlignment="Center" Margin="0,119,0,0" Text="Sorry, time is up for your reserved seats." TextWrapping="Wrap" VerticalAlignment="Top" Width="496" TextAlignment="Center" FontSize="25" Height="37" TextChanged="TextBox_TextChanged"/>
        <Button Content="Language" HorizontalAlignment="Left" Margin="8,402,0,10" Width="68" FontSize="14"/>
        <Button Content="Help" HorizontalAlignment="Left" Margin="89,402,0,0" VerticalAlignment="Top" Height="38" Width="61" FontSize="14"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" Height="30" FontSize="20" TextAlignment="Center" Margin="0,195,0,0"><Run Text="Please start "/><Run Language="en-ca" Text="a new"/><Run Text=" transaction"/></TextBlock>
        <Button Content="Start a new transaction&#xA;Commencer une nouvelle transaction" HorizontalAlignment="Center" Margin="0,271,0,100" Width="388" FontSize="22"/>

    </Grid>
</Page>
