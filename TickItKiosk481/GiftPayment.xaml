<Window x:Class="TickItKiosk481.GiftPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickItKiosk481"
        mc:Ignorable="d"
        Title="Ticket" Height="450" Width="800" WindowStartupLocation="Manual" Left="0" Top="0" SizeToContent="WidthAndHeight">
    <Grid HorizontalAlignment="Center" Height="450" VerticalAlignment="Top" Width="800" Margin="0,-16,0,0">
        <Image Margin="182,136,398,23" Stretch="Fill" Source="images/scanner.jpg"/>
        <TextBlock HorizontalAlignment="Left" Margin="432,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="74" Width="226" FontSize="25"><Run Language="en-ca" Text="&lt;-"/><Run Text="Use the barcode scanner to scan"/></TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="564" FontSize="30"><Run Text="Please scan "/><Run Text="the barcode on "/><Run Text="your "/><Run Language="en-ca" Text="gift"/><Run Text=" card"/></TextBlock>
        <Button Content="Back to select another payment method" HorizontalAlignment="Left" Height="35" Margin="12,25,0,0" VerticalAlignment="Top" Width="232" Click="BackToPayment"/>
        <TextBox HorizontalAlignment="Left" Margin="658,25,0,0" Text="Time left for seat reservation: 1:45" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="43" FontSize="14" />
        <Button Content="Language" HorizontalAlignment="Left" Margin="6,411,0,7" Width="68" FontSize="14" Click="GetLanguage"/>
        <Button Content="Help" HorizontalAlignment="Left" Margin="85,411,0,0" VerticalAlignment="Top" Height="32" Width="68" FontSize="14" Click="GetHelp"/>
        <Button Content="Successfully Pay" HorizontalAlignment="Left" Height="47" Margin="566,332,0,0" VerticalAlignment="Top" Width="159" FontSize="20" Click="GoToEnd"/>

    </Grid>
</Window>
