        <Image HorizontalAlignment="Left" Height="50" Margin="337,32,0,0" VerticalAlignment="Top" Width="132" Source="/images/logoLetter.png"/>
        <Separator HorizontalAlignment="Left" Height="13" Margin="39,50,0,0" VerticalAlignment="Top" Width="289"/>
        <Separator HorizontalAlignment="Left" Height="13" Margin="477,50,0,0" VerticalAlignment="Top" Width="302"/>

    </Grid>
</Window>
